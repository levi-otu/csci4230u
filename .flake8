[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    backend/alembic/versions/*.py,
    .pytest_cache,
    frontend,
    node_modules
# Ignore common style issues - focus on real errors
# F841: unused variables prefixed with _ are intentionally ignored (exception handlers)
ignore = E501, E128, E122, E302, W291, W605, W503, W504, W292, F841
per-file-ignores =
    __init__.py:F401,F403
