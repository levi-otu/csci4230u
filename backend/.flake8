[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    alembic/versions/*.py,
    .pytest_cache
ignore = E501, E128, E122, E302, W291, W605
per-file-ignores =
    __init__.py:F401,F403
    alembic/versions/*.py:E501,E128,E122,W291
    tests/*.py:F401,F841
    src/models/*.py:F401
    src/storage/**/*.py:F841
    src/handlers/**/*.py:F401
