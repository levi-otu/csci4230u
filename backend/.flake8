[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    ENV,
    env,
    build,
    dist,
    *.egg-info,
    alembic/versions/*.py,
    .pytest_cache
ignore =
    E501,  # line too long (handled by max-line-length)
    E128,  # continuation line under-indented
    E122,  # continuation line missing indentation
    E302,  # expected 2 blank lines
    W291,  # trailing whitespace
    W605,  # invalid escape sequence
per-file-ignores =
    __init__.py:F401,F403
    alembic/versions/*.py:E501,E128,E122,W291
    tests/*.py:F401,F841
    src/models/*.py:F401
    src/storage/**/*.py:F841
    src/handlers/**/*.py:F401
